{
  "name": "d3fc",
  "version": "1.0.0",
  "description": "A collection of components that make it easy to build interactive charts with D3",
  "main": "build/d3fc.js",
  "scripts": {
    "bundle": "rimraf build && rollup -c && uglifyjs build/d3fc.js --compress --mangle -o build/d3fc.min.js",
    "site": "npm-run-all site:build",
    "site:build": "babel-node site/builder/build.js",
    "site:clean": "rimraf site/dist && mkdirp site/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d3fc/d3fc.git"
  },
  "keywords": [
    "d3",
    "financial",
    "components",
    "charts"
  ],
  "author": "Ali Sheehan-Dare <alisd23@live.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d3fc/d3fc/issues"
  },
  "homepage": "https://github.com/d3fc/d3fc#readme",
  "dependencies": {
    "d3fc-data-join": "^2.0.0",
    "d3fc-discontinuous-scale": "^2.0.0",
    "d3fc-extent": "^2.2.0",
    "d3fc-financial-feed": "^2.0.0",
    "d3fc-label-layout": "^4.0.0",
    "d3fc-random-data": "^1.0.0",
    "d3fc-rebind": "^4.0.1",
    "d3fc-sample": "^3.0.1",
    "d3fc-shape": "^4.0.0",
    "d3fc-technical-indicator": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-register": "^6.9.0",
    "eslint": "^3.1.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "fs-promise": "^0.5.0",
    "glob": "^7.0.5",
    "gray-matter": "^2.0.2",
    "handlebars": "^4.0.5",
    "jasmine": "^2.4.1",
    "npm-run-all": "^2.3.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.1",
    "rollup-plugin-babel": "^2.4.0",
    "simple-markdown": "^0.1.1",
    "uglify-js": "^2.6.2"
  }
}
