---
layout: default
---

<div class="container project">
  <div class="col-sm-9">
    {{#each structure}}
      <div class="section">
        <h{{level}}>
{{title}}
        </h{{level}}>
        {{#markdown this}}
{{{content}}}
        {{/markdown}}
        {{#each children}}
          <h{{level}}>
{{title}}
          </h{{level}}>
          {{#markdown this}}
{{{content}}}
          {{/markdown}}
        {{/each}}
      </div>
    {{/each}}
  </div>

  <nav class="col-sm-3 hidden-xs">
    <ul class="nav nav-stacked fixed nav-sidebar">
      {{#each api}}
        <li>
          <h4>
            <a href="{{baseurl}}/api/{{name}}.html">{{title}}</a>
          </h4>
